extends layout 

block dhead
  link(rel="stylesheet", href="/assets/css/style.css")

block content 
  .w3-card-4
    header.w3-container.w3-blue
      h1.no-margin.mb= entity.name
      h3.no-margin.mt= entity.idAutor
      h6.no-margin.mt 
        a(href="/livros") Voltar atrás
    
    .w3-container
      h2 Livros Escritos: #{entity.lbooks.length}

      h2 Livros
      table.w3-table-all
        tr
          thead
            tr
              th Identificador
              th Título
              th Autor(es)
              th Data de Publicação
              th Páginas
          tbody
            each livro in llivros
              tr
                td
                    a(href=`/${livro.bookId}`)= livro.bookId
                td= livro.title
                td
                  each author in livro.author
                    a(href=`/entidades/${Buffer.from(author, "utf8").toString("hex")}`)= author
                    br
                td= livro.publishDate
                td= livro.pages

  footer.we-container.w3-blue
    address Generated by ENGWEB2025 class