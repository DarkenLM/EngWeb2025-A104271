extends layout 

block dhead
  link(rel="stylesheet", href="/assets/css/style.css")

block content 
  .w3-card-4
    header.w3-container.w3-blue
      h1 Lista de Atores 

    .w3-container
      table.w3-table-all
        tr
          thead
            tr
              th Nome
          tbody
            each cast in lcast
              tr(data-id=`${cast.id}`)
                td
                  a.w3-cell.w3-button(href="actors/" + cast.id)= cast.name

