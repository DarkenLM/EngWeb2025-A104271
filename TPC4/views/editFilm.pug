extends layout 

block dhead
  link(rel="stylesheet", href="/assets/css/style.css")

block content 
  .w3-card-4
    header.w3-container.w3-blue
      h1= title 

    .w3-container
      h2.no-margin.mb= film.title
      h6.no-margin.mt= film.id
      
      form#editForm(action="" method="POST") 
        input(name="id" style="display: none;" data-hidden="true" value=film.id)

        label Nome
        input.w3-input(name="title" type="text" value=film.title placeholder=film.title)

        label Ano
        input.w3-input(name="year" type="number" value=film.year placeholder=film.year)

        label Elenco
        .w3-container.w3-border.formItemList
          input#castInput.w3-input(name="_formListInput" type="text" placeholder="Novo elenco...")
          ul.w3-ul
            each cast in film.cast
              li.flex.fc.fsb(name="_formListElement")
                div= cast
                .flex.fc.fh
                    button.w3-cell.w3-button Delete

        label Géneros
        .w3-container.w3-border.formItemList
          input#genreInput.w3-input(name="_formListInput" type="text" placeholder="Novo género...")
          ul.w3-ul
            each genre in film.genres
              li.flex.fc.fsb(name="_formListElement")
                div= genre
                .flex.fc.fh
                    button.w3-cell.w3-button Delete

        br
        p#errorLabel.w3-input.errorLabel
        input.w3-input.w3-button(type="submit", value="Salvar")
  
  script(src="/assets/js/editFilm.js") 
        
  
