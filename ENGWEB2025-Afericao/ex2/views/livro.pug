extends layout 

block dhead
  link(rel="stylesheet", href="/assets/css/style.css")

block content 
  .w3-card-4
    header.w3-container.w3-blue
      h1.no-margin.mb #{livro.title}
      h6.no-margin.mt 
        a(href="/livros") Voltar atrás

    .w3-container
      if livro.coverImg
        img(src=""+ livro.coverImg, alt="Book Image")

      table.w3-table-all
        tr
          thead
            tr
              th
              th
          tbody
              tr
                td Identificador
                td= livro.bookId
              tr
                td Título
                if livro.title
                  td= livro.title
                else
                  td N/A
              tr
                td Séries
                td= livro.series
              tr
                td Autor(es)
                td
                  each author in livro.author
                    p= author
                    br
              tr
                td Data de Publicação
                td= livro.publishDate
              tr
                td Páginas
                td= livro.pages
              tr
                td Linguagem
                td= livro.language  
              tr
                td Preço
                td #{livro.price}€
              tr
                td Descrição
                td= livro.description

              tr
                td Rating
                td= livro.rating
              tr
                td Número de Ratings
                td= livro.numRatings
              tr
                td Percentagem de Gostos
                td #{livro.numRatings}%
              tr
                td Ratings por estrelas
                td 
                  table.w3-table-all
                    thead
                      tr
                        th 1
                        th 2
                        th 3
                        th 4
                        th 5
                    tbody
                      tr
                        th= livro.ratingsByStars[0]
                        th= livro.ratingsByStars[1]
                        th= livro.ratingsByStars[2]
                        th= livro.ratingsByStars[3]
                        th= livro.ratingsByStars[4]
              tr
                td BBE Score
                td= livro.bbeScore
              tr
                td BBE Votes
                td= livro.bbeVotes
              
              tr
                td Géneros
                td
                  each genre in livro.genres
                    p= genre
                    br
              tr
                td Personagens
                td
                  each character in livro.characters
                    p= character
                    br
              tr
                td Prémios
                td
                  each award in livro.awards
                    p= award
                    br

              tr
                td ISBN
                td= livro.isbn
              tr
                td Publicador
                td= livro.publisher
              tr
                td Data de Primeira Publicação
                td= livro.firstPublishDate
              tr
                td Formato
                td= livro.bookFormat
              tr
                td Edição
                td= livro.edition
              tr

  footer.we-container.w3-blue
