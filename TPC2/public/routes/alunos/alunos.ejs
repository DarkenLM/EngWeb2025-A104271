<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alunos</title>
    <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
    <div class="main">
        <%- include("../_templates/navbar.ejs") %>
        <div class="content-container">
            <div class="sidebar">

            </div>
            <div class="content">
                <div class="table entryTable interventions">
                    <div class="table-row head">
                        <div class="table-cell">Nome</div>
                        <div class="table-cell">Ano</div>
                        <div class="table-cell">Curso</div>
                    </div>
                    <% for (const aluno of alunos) { %>
                        <a href="/alunos/<%= aluno.id %>" class="entry table-row">
                            <div class="table-cell" name="nome"><%= aluno.nome %></div>
                            <div class="table-cell" name="anoCurso"><%= aluno.anoCurso %></div>
                            <div class="table-cell" name="curso"><%= aluno.curso %></div>
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
        <%- include("../_templates/footer.ejs") %>
    </div>

    <script src="/assets/js/main.js"></script>
</body>
</html>