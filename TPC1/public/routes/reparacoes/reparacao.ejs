<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reparação <%= reparacao.id %></title>
    <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
    <div class="main">
        <%- include("../_templates/navbar.ejs") %>
        <div class="content-container">
            <div class="sidebar">

            </div>
            <div class="content">
                <h2>Reparação: <%= reparacao.id %></h2>
                <h3>Nome: <%= reparacao.nome %></h3>
                <h3>NIF: <%= reparacao.nif %></h3>
                <h3>Data: <%= reparacao.data %></h3>
                <br/>
                <h3>Intervenções:</h3>
                <div class="table entryTable interventions">
                    <div class="table-row head">
                            <div class="table-cell">Código</div>
                            <div class="table-cell">Nome</div>
                            <div class="table-cell">Descrição</div>
                    </div>
                    <% for (const inter of intervencoes) { %>
                        <a href="/intervencao/<%= inter.codigo %>" class="entry table-row">
                            <div class="table-cell" name="codigo"><%= inter.codigo %></div>
                            <div class="table-cell" name="nome"><%= inter.nome %></div>
                            <div class="table-cell" name="descricao"><%= inter.descricao %></div>
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
        <%- include("../_templates/footer.ejs") %>
    </div>

    <script src="/assets/js/main.js"></script>
</body>
</html>